<%- include('../partials/header') %>

  <div class="container">
    <h1>Lista de Livros</h1>

    <a href="/novo">âž• Adicionar Livro</a>

    <ul>
      <% livros.forEach(livro=> { %>
        <li>
          <span>
            <strong>
              <%= livro.titulo %>
            </strong> - <%= livro.autor %>
              (<%= livro.ano %>) [<%= livro.genero %>]
          </span>
          <span>
            <a href="/editar/<%= livro.id %>">Editar</a>
            <form action="/deletar/<%= livro.id %>" method="POST" style="display:inline;">
              <button type="submit" class="delete">Excluir</button>
            </form>
          </span>
        </li>
        <% }) %>
    </ul>
  </div>

  <%- include('../partials/footer') %>